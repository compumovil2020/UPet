<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="0dp">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:padding="0dp">


        <fragment
            android:id="@+id/mapSeguimientoPaseador"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity" />

        <Spinner
            android:id="@+id/spinnerSeguimientoPaseador"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="35dp"
            android:background="@drawable/roundedbutton"
            android:ems="10"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:textColor="@color/beigePet"
            android:textColorHint="@color/beigePet"
            android:textStyle="bold" />
    </FrameLayout>

</FrameLayout>
