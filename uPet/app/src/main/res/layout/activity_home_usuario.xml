<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beigePet"
    tools:context=".HomeUsuarioActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_upet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnPerfilUsuario"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/circle_button"
                        android:scaleType="fitCenter"
                        android:src="@drawable/perfil"
                        android:text="@string/home_profile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/playfair_display_black"
                        android:gravity="center_horizontal"
                        android:text="@string/home_profile"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnAdminMascotasUsuario"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/circle_button"
                        android:scaleType="fitCenter"
                        android:src="@drawable/admin_mascotas"
                        android:text="@string/home_manage_pet" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/playfair_display_black"
                        android:text="@string/home_manage_pet"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnAdminPaseosUsuario"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/circle_button"
                        android:scaleType="fitCenter"
                        android:src="@drawable/admin_paseos"
                        android:text="@string/home_manage_walk1" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/playfair_display_black"
                        android:gravity="center"
                        android:text="@string/home_manage_walk1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnSitiosInteresUsuario"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/circle_button"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sitios_interes"
                        android:text="@string/home_place_interest" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/playfair_display_black"
                        android:text="@string/home_place_interest"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/boton_pedir_paseo"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/circle_button"
                        android:scaleType="fitCenter"
                        android:src="@drawable/admin_paseos"
                        android:text="@string/home_schedule_walk" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/playfair_display_black"
                        android:text="@string/home_order_walk"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/boton_chat"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/circle_button"
                        android:src="@drawable/chat_icon"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/playfair_display_black"
                        android:gravity="center"
                        android:text="@string/home_chat"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>